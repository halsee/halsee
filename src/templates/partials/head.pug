head
  meta(charset="utf-8")
  title
    block title
      | #{pageTitle}

  // SEO Meta Tags
  meta(name="description", content="Joshua Holland's personal website")
  meta(name="keywords", content="")
  meta(name="author", content="Joshua Holland")

  // Viewport
  meta(name='viewport' content='width=device-width, initial-scale=1')

  // Favicon and Touch Icons
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#00b9d6">
  <meta name="msapplication-TileColor" content="#00b9d6">
  <meta name="theme-color" content="#ffffff">
  //-
    link(rel="apple-touch-icon", sizes="180x180")&attributes(isNestedFile ? {'href':'../apple-touch-icon.png'} : {'href':'apple-touch-icon.png'})
    link(rel="icon", type="image/png", sizes="32x32")&attributes(isNestedFile ? {'href':'../favicon-32x32.png'} : {'href':'favicon-32x32.png'})
    link(rel="icon", type="image/png", sizes="16x16")&attributes(isNestedFile ? {'href':'../favicon-16x16.png'} : {'href':'favicon-16x16.png'})
    link(rel="manifest")&attributes(isNestedFile ? {'href':'../site.webmanifest'} : {'href':'site.webmanifest'})
    link(rel="mask-icon", color="#343b43")&attributes(isNestedFile ? {'href':'../safari-pinned-tab.svg'} : {'href':'safari-pinned-tab.svg'})
    meta(name="msapplication-TileColor", content="#603cba")
    meta(name="theme-color", content="#ffffff")

  // Vendor Styles including: Font Icons, Plugins, etc.
  link(rel="stylesheet", media="screen")&attributes(isNestedFile ? {'href': '../css/vendor.min.css'} : {'href': 'css/vendor.min.css'})

  if isCardScript
    // Interactive Credit Card
    link(rel="stylesheet", media="screen")&attributes(isNestedFile ? {'href': '../css/card.min.css'} : {'href': 'css/card.min.css'})

  // Main Theme Styles + Bootstrap
  link(rel="stylesheet", media="screen")&attributes(isNestedFile ? {'href': '../css/theme.min.css'} : {'href': 'css/theme.min.css'})

  // Modernizr
  script()&attributes(isNestedFile ? {'src': '../js/modernizr.min.js'} : {'src': 'js/modernizr.min.js'})

  // reCAPTCHA
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>

  if isGoogleMap
    // Google Map API
    script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAACWdZfvsxk4RffdTsNZ5vXdi4Y8onJ1I"
    type="text/javascript")